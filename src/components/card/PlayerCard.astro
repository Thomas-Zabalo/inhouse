---
const { player } = Astro.props;
---

<div class="bg-zinc-950 px-4 rounded-lg border border-zinc-800 w-full">
    <a
        href={`/players/${player.slug}`}
        class="group overflow-hidden transition-all hover:shadow-lg"
    >
        <div class="relative h-48 overflow-hidden">
            <img
                src={player.data.image ? player.data.image : "/sil.png"}
                alt={player.data.fullName}
                class="w-full h-full object-cover"
            />
        </div>

        <div class="p-4">
            <div class="flex items-center justify-between mb-2">
                <h3 class="text-lg font-bold text-white uppercase">
                    {player.data.nickname}
                </h3>
                <span
                    class="text-xs bg-zinc-800 text-zinc-300 px-2 py-1 rounded"
                >
                    {player.data.country}
                </span>
            </div>

            <p class="text-sm text-zinc-400 mb-3">
                {player.data.fullName}
            </p>

            <div class="flex items-center justify-between">
                <span class="text-sm font-semibold text-blue-400 bg-zinc-800 px-4 py-2 rounded-lg">
                    {player.data.team}
                </span>
                {
                    player.data.twitter && (
                        <a
                            href={`https://twitter.com/${player.data.twitter.replace("@", "")}`}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-zinc-500 hover:text-blue-400 transition-colors"
                            onClick={(e) => e.stopPropagation()}
                        >
                            <svg
                                class="w-4 h-4"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2s9 5 20 5a9.5 9.5 0 00-9-5.5c4.75 2.25 9-7 9-7" />
                            </svg>
                        </a>
                    )
                }
            </div>
        </div>
    </a>
</div>
