---
interface Props {
  teamLeft: string;
  teamRight: string;
  scoreLeft: number;
  scoreRight: number;
  logoLeft: string;
  logoRight: string;
  map: string;
  date: string;
  time: string;
  status?: "finished" | "upcoming" | "live";
}

const {
  teamLeft,
  teamRight,
  scoreLeft,
  scoreRight,
  logoLeft,
  logoRight,
  map,
  date,
  time,
  status = "finished",
} = Astro.props;

const statusConfig = {
  finished: {
    label: "Terminé",
    classes: "bg-green-900 text-green-300",
  },
  upcoming: {
    label: "À venir",
    classes: "bg-blue-900 text-blue-300",
  },
  live: {
    label: "En cours",
    classes: "bg-yellow-900 text-yellow-300",
  },
};

const currentStatus = statusConfig[status];
---

<div
  class="flex flex-col gap-3 bg-zinc-950 p-4 rounded-lg border border-zinc-800 w-full"
>
  <div class="flex justify-end">
    <span class={`px-3 py-1 text-xs font-medium rounded-md ${currentStatus.classes}`}>
      {currentStatus.label}
    </span>
  </div>

  <div class="flex items-center justify-between">
    <div class="flex items-center gap-3">
      <div
        class="w-12 h-12 bg-zinc-800 flex items-center justify-center rounded"
      >
        <img src={logoLeft} alt={`${teamLeft} Logo`} width="24" height="24" />
      </div>
      <div class="flex flex-col gap-1">
        <div
          class="text-xs font-semibold text-zinc-200 uppercase tracking-wide"
        >
          {teamLeft}
        </div>
      </div>
    </div>
    <div class="text-2xl font-bold text-white">{scoreLeft}</div>
  </div>

  <div class="flex items-center justify-center">
    <div class="text-zinc-400 text-sm">VS</div>
  </div>

  <div class="flex items-center justify-between">
    <div class="text-2xl font-bold text-white">{scoreRight}</div>
    <div class="flex items-center gap-3">
      <div class="flex flex-col gap-1 text-right">
        <div
          class="text-xs font-semibold text-zinc-200 uppercase tracking-wide"
        >
          {teamRight}
        </div>
      </div>
      <div
        class="w-12 h-12 bg-zinc-800 flex items-center justify-center rounded"
      >
        <img src={logoRight} alt={`${teamRight} Logo`} width="24" height="24" />
      </div>
    </div>
  </div>

  <div
    class="border-t border-zinc-700 pt-3 flex justify-between text-xs text-zinc-400"
  >
    <div class="font-medium">{map}</div>
    <div>{date}</div>
    <div>{time}</div>
  </div>
</div>